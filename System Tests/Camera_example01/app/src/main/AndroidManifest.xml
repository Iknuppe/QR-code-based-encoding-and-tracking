<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kraxner.joschi.camera_example01" >

    <uses-permission android:name="android.permission.CAMERA" />

    //android:required="false" means, that the subfeature "autofocus" is not used
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    // probably we need it. Don't know if we store the picture first and then encode it or
    // if we encode the picture directly (if it works)
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
